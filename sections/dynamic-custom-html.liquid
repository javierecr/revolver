<section class="section">

  {%- unless section.settings.title == blank -%}
    <h2 class="type-heading-1">{{ section.settings.title | escape }}</h2>
  {%- endunless -%}

  {%- unless section.settings.custom_html == blank -%}
    <div class="custom-html">{{ section.settings.custom_html }}</div>
  {%- endunless -%}

</section>

{% schema %}
  {
    "name": "Custom HTML",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "html",
        "id": "custom_html",
        "label": "Custom HTML",
        "default": "<p>Write or paste your HTML code here</p>"
      }
    ],
    "presets": [{
        "name": "Custom HTML",
        "category": "Specialized"
    }]
  }
{% endschema %}
