{%- comment -%}
  In order to avoid showing "success" message when we post comments
  with invalid format (eg. blank fields), we added logic to make sure it doesn't show.

  Comment help page:
  http://docs.shopify.com/themes/liquid-variables/comment
{%- endcomment -%}

{% assign blogHandle = blog.title | handleize | append: '-' %}
{% assign projectHandle = article.title | handleize | append: '-' %}
{% assign finalName = blogHandle | append: projectHandle | append: 'cover.jpg'%}
{% assign finalCoverFile = images[finalName]  %}
<section data-component="page">
    {% assign s = section.settings %}
  {% if article.image or finalCoverFile.width != blank %}
  {% if finalCoverFile.width != blank %}
    {% assign finalCoverPhoto = finalCoverFile %}
  {% else %}
    {% assign finalCoverPhoto = article.image %}
  {% endif %}
    <div
      class="article__heading-wrapper lazyload cover bg-container bg-center relative"
      data-bgset="{% render 'responsive-bg-image', image: finalCoverPhoto %}"
      role="img"
      aria-label="{{ finalCoverPhoto.alt }}"
    >
      <div class="article__heading-content" {% if s.text_color != blank %}style="color: {{ s.text_color }};"{% endif %}>
        <header role="banner" class="article__heading__text ph3 tc self-center centered-content">
          <h1 class="type-heading-display measure-narrow center{% if section.settings.large_header == true %} large{% endif%}">{{ article.title }}</h1>
          {%- if article.excerpt != blank -%}
            <div class="type-body-large measure center">{{ article.excerpt }}</div>
          {%- endif -%}
        </header>
      </div>

      {% if s.overlay_color != blank %}
        <div class="z-1 absolute absolute--fill o-{{ s.overlay_opacity }}" style="background: {{ s.overlay_color }};"></div>
      {% endif %}
    </div>

    <noscript>
      {%- assign image_size = finalCoverPhoto.width | append: 'x' -%}
      <div class="cover bg-center" style="background-image: {{ finalCoverPhoto | img_url: image_size }}"></div>
    </noscript>
  {% else %}
    {% render 'page-header' with title: article.title, hide_breadcrumbs: true %}
  {% endif %}
</section>

{% schema %}
  {
    "name": "Blog post",
    "settings": [
      {
        "type": "header",
        "content": "Style"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Overlay opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "default": 30,
        "unit": "%"
      },
      {
        "type": "color",
        "id": "overlay_color",
        "label": "Overlay color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color"
      },
      {
        "type": "checkbox",
        "id": "large_header",
        "label": "Larger header"
      }
    ]
  }
{% endschema %}